---
import Layout from '../layouts/Layout.astro';
import ImageCompressor from '../components/ImageCompressor.tsx';
---

<Layout title="Compress Images - Free Image Compression Tool">
    <main class="flex-grow p-4">
        <div class="max-w-4xl mx-auto py-8">
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold text-gray-900 mb-2">
                    Compress Images Online
                </h1>
                <p class="text-gray-600">
                    Reduce image file size while maintaining quality. Free, fast, and secure.
                </p>
            </div>
            
            <ImageCompressor client:load />
        </div>
    </main>
</Layout>
